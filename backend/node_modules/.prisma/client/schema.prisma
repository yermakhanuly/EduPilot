generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String             @id @default(uuid())
  email             String             @unique
  name              String
  passwordHash      String
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  tasks             Task[]
  studyBlocks       StudyBlock[]
  studySessions     StudySession[]
  rewards           Reward[]
  stats             UserStats?
  integrationCanvas IntegrationCanvas?
  weeklyClasses     WeeklyClass[]
  fixedEvents       FixedEvent[]
}

model Task {
  id                  String         @id @default(uuid())
  userId              String
  title               String
  description         String?
  deadline            DateTime?
  difficulty          String         @default("medium")
  priority            Int            @default(1)
  remainingHours      Int            @default(0)
  status              String         @default("pending")
  source              String         @default("manual")
  externalId          String?
  completedAt         DateTime?
  completionXpAwarded Boolean        @default(false)
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
  user                User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  studyBlocks         StudyBlock[]
  studySessions       StudySession[]
}

model StudyBlock {
  id           String        @id @default(uuid())
  userId       String
  taskId       String?
  start        DateTime
  end          DateTime
  source       String        @default("planner")
  status       String        @default("scheduled")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  task         Task?         @relation(fields: [taskId], references: [id], onDelete: SetNull)
  studySession StudySession? @relation("BlockSession")
}

model StudySession {
  id             String      @id @default(uuid())
  userId         String
  taskId         String?
  blockId        String?     @unique
  startedAt      DateTime    @default(now())
  endedAt        DateTime?
  status         String      @default("in-progress")
  focusedMinutes Int         @default(0)
  xpEarned       Int         @default(0)
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  task           Task?       @relation(fields: [taskId], references: [id], onDelete: SetNull)
  block          StudyBlock? @relation("BlockSession", fields: [blockId], references: [id], onDelete: SetNull)
}

model Reward {
  id        String    @id @default(uuid())
  userId    String
  label     String
  detail    String?
  costXp    Int       @default(0)
  claimedAt DateTime?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserStats {
  id            String    @id @default(uuid())
  userId        String    @unique
  totalXp       Int       @default(0)
  weeklyXp      Int       @default(0)
  streak        Int       @default(0)
  level         Int       @default(1)
  dailyBaseXp   Int       @default(0)
  dailyXp       Int       @default(0)
  dailyDate     DateTime?
  lastSessionAt DateTime?
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model IntegrationCanvas {
  id             String    @id @default(uuid())
  userId         String    @unique
  tokenEncrypted String?
  canvasBaseUrl  String
  canvasUserId   String?
  lastImportedAt DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FixedEvent {
  id         String   @id @default(uuid())
  userId     String
  title      String
  type       String   @default("exam")
  start      DateTime
  end        DateTime
  notes      String?
  source     String   @default("manual")
  externalId String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WeeklyClass {
  id         String   @id @default(uuid())
  userId     String
  title      String
  day        Int
  start      String
  end        String
  location   String?
  source     String   @default("manual")
  externalId String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
